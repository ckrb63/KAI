datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  output   = "./"
}

model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id        String       @id @default(cuid())
  content   String
  role      String
  history   ChatHistory  @relation(fields: [historyId], references: [id])
  historyId String

  @@index([historyId])
}

model ChatHistory {
  id      String   @id @default(cuid())
  userId  String
  chats   Chat[]
}